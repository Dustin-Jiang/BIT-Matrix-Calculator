{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "process",
      "label": "C/C++: CMake 生成目标文件",
      "command": "pwsh",
      "args": [
        "./script/build-target.ps1"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "build"
    },
    {
      "type": "cppbuild",
      "label": "C/C++: g++.exe 生成测试文件",
      "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "./test/test.cpp",
        "-Wformat",
        "-Wunused-result",
        "-o",
        "./test/test.exe"
      ],
      "options": {
        "cwd": "${workspaceRoot}"
      },
      "problemMatcher": ["$gcc"],
      "group": "build",
      "detail": "编译器: C:\\msys64\\ucrt64\\bin\\g++.exe"
    }
